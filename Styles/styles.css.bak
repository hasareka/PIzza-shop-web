footer {
	font-family:times new roman;
	height:350px;
	background-color: #F04362;
	padding: 10px;
	text-align: center;
	color: white;
}
a:link {
  text-decoration: none;
  }
  
#header{
	height:100vh;
	text-transform:uppercase;
	text-align: center;
	font-family:'arial';
	display:flex;
	flex-direction:column;
	}
header nav{
	display:flex;
	flex: 1 1 600px;
	justify-content:flex-end;
	margin-right:40px;
	align-items:center;
	
}
header nav a{
	padding:10px 20px;
	text-decoration:none;
	color: white;
}
header.logo{
	width:150px;
	height:150px;
	flex:0 1 150px;
	margin-left:20px;
	}
	
header.logo img{
	height:inherit;
	width:inherit;
	
}

.button{
	width:250px;
	padding:20px 15px;
	border:2px solid yellow;
	border-radius:5px;
	margin-top:40px;
	color:yellow;
	text-decoration:none;
}
.button:hover{
	background-color:red;
	border-color:red;
	transform:rotate(5deg);
	transition:all 0.2s ease-in-out;
}
.column-1 {
  float: left;
  width: 50%;
  padding: 20px;
}

.column-2 {
  float: left;
  width: 50%;
  padding: 20px;
}

.large-font {
  font-size: 48px;
  color:MediumSeaGreen;
}
